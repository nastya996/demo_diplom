<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#1B1A14">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarNote"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#68BD31"
            android:theme="@style/Toolbar" />

        <EditText
            android:id="@+id/input_title"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:autofillHints=""
            android:backgroundTint="#FFD600"
            android:hint="@string/title"
            android:inputType="datetime"
            android:lines="1"
            android:padding="8dp"
            android:textColorHint="#FDFFFFFF"
            android:textSize="30sp"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/input_subtitle"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:autofillHints=""
            android:backgroundTint="#FFD600"
            android:hint="@string/subtitle"
            android:inputType="textMultiLine|text"
            android:lines="8"
            android:padding="8dp"
            android:textColor="#00FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp"
            tools:targetApi="o" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/deadlineCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:buttonTint="#DDB525"
            android:onClick="checkDeadline"
            android:text="@string/dateDeadline"
            android:textColor="#FAFFFFFF" />

        <LinearLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_deadline"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFD600"
                android:hint="@string/day_deadline"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColorHint="#F7FFFFFF" />

            <ImageButton
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:onClick="createDeadline"
                android:src="@drawable/ic_event_black_24dp"
                android:contentDescription="@string/todo" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>